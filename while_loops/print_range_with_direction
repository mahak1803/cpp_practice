// File: print_range_with_direction.cpp
// Description: Program to print numbers from starting number to ending number using while loop.
//              It handles both increasing and decreasing sequences.

#include<iostream>
using namespace std;

int main()
{
    int n, m;

    // Input start and end values
    cout << "Enter starting number: ";
    cin >> n;
    cout << "Enter ending number: ";
    cin >> m;

    // Print numbers from n to m (increasing or decreasing)
    if (n <= m) {
        while (n <= m) {
            cout << n++ << endl;
        }
    } else {
        while (n >= m) {
            cout << n-- << endl;
        }
    }

    return 0;
}
