// File: sum_odd_numbers_direct.cpp
// Description: Program to print the sum of all odd numbers up to a given number using for loop.

#include<iostream>
using namespace std;

int main()
{
    int n, sum = 0;

    // Input the number from the user
    cout << "Enter number = ";
    cin >> n;

    // Loop through odd numbers only (1, 3, 5, ...) and sum them
    for (int i = 1; i <= n; i += 2) {
        sum += i;
    }

    // Output the result
    cout << "The sum of odd numbers is = " << sum << endl;

    return 0;
}
